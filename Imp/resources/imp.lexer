spaces(ignore) = /[ \t]+/
newlines(optional) = /(\s*\n)+\s*/
comma = ","
path_separator = "."
comma_or_newline = newlines | comma
semicolon_or_newline = newlines | ";"
line_comment(ignore) = "//[^\r\n]*"
string = /"[^"]*"/ | /'[^']*'/
bool = "true" | "false"
int = /-?[0-9]+/
float = /-?([0-9]*\.)?[0-9]+f?/
equals = "="
operator = '+' | '-' | '/' | '*' | '<=' | '>=' | '<' | '>' | '==' | '!=' | '&&' | '||' | /\$\w+/
set_operator = equals | '+=' | '-=' | '*=' | '/=' | '@='

keyword =
	  "abstract"
	| "break"
	| "class"
	| "continue"
	| "delete"
	| "do"
	| "if"
	| "for"
	| "namespace"
	| "new" 
	| "private"
	| "public"
	| "return"
	| "while"

type =
	  "bool"
	| "int"
	| "float"
	| "string"

block_start = "{"
block_end = "}"

group_start = "("
group_end = ")"

array_start = "["
array_end = "]"

colon = ":"

arrow = "=>

id = /[\$a-zA-Z0-9_]+/